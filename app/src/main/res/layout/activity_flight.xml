<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/flightElementLayout"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/textCityName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="25dp"
                android:typeface="monospace"
                android:layout_marginLeft="10dp"
                android:text="Venice" />

            <TextView
                android:id="@+id/textFlightNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:typeface="monospace"
                android:textSize="20dp"
                android:textColor="#3b6670"
                android:ems="10"
                android:text="HV 5495" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:layout_toRightOf="@id/flightElementLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textFlightStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:typeface="monospace"
                android:textSize="17dp"
                android:ems="10"
                android:text="On time" />

            <TextView
                android:id="@+id/textFlightTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:typeface="monospace"
                android:textSize="20dp"
                android:ems="10"
                android:text="7:30" />
        </LinearLayout>
</LinearLayout>
